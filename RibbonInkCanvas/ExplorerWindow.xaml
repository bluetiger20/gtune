<custom:DockableContent x:Class="DockingLibraryDemo.ExplorerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Explore window" Height="300" Width="201" Icon="Icons\View_tree.ico"
	xmlns:custom="clr-namespace:DockingLibrary;assembly=DockingLibrary"
    >

	<DockPanel LastChildFill="True">
        <TreeView  x:Name="treeView1"  Width="200" Background="#f5f5f5" BorderBrush="{x:Null}" Foreground="{x:Null}">
        </TreeView>
        <StackPanel DockPanel.Dock="Bottom"  Width="1" >
			<TextBlock Text="{Binding ElementName=_lstRecents, Path=SelectedItem.FileName}"/>
			<TextBlock Text="{Binding ElementName=_lstRecents, Path=SelectedItem.Path}"/>
		</StackPanel>
        <ListBox Name="_lstRecents"   Width="1" IsSynchronizedWithCurrentItem="True"/>
	</DockPanel>

</custom:DockableContent>
